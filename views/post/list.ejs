<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Post List</title>
    <style>
      table,
      tr,
      th,
      td {
        border: 1px solid red;
      }
    </style>
  </head>
  <body>
    <h1>Post List</h1>
    <table>
      <thead>
        <th>Title</th>
        <th>Content</th>
        <th>Profile</th>
        <th>Author Name</th>
        <th>Author Email</th>
      </thead>
      <tbody>
        <% for(var i = 0; i < posts.length; i++){%>
        <tr>
          <td>
            <a href="/posts/detail/<%= posts[i]._id %>"
              ><%= posts[i].title %></a
            >
          </td>
          <td><%= posts[i].content %></td>
          <td>
            <img src="<%= posts[i].imgUrl %>" alt="" width="100" height="100" />
          </td>
          <td><%= posts[i].author.name %></td>
          <td><%= posts[i].author.email %></td>
        </tr>
        <%}%>
      </tbody>
    </table>
  </body>
</html>
